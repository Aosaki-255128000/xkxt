<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsy.springboot.mapper.TeacherMapper">
    <update id="update">
        update teacher
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="jobNumber != null">
                jobNumber = #{jobNumber},
            </if>
            <if test="departmentId != null">
                departmentId = #{departmentId},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="birthDate != null">
                birthDate = #{birthDate},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>